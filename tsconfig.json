{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "jsx": "preserve",
    "module": "ES2015",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}